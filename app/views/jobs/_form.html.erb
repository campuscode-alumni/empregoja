<div id="errors">
  <% if @job.errors.any? %>
  <ul>
    <% @job.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="col-md-3 col-md-offset-2">
    <div class="panel panel-info ">
      <div class="panel-heading">
        <div class="panel-title">
          <h3>Job registration</h3>
        </div>
      </div>
      <%= form_for @job do |f| %>
      <div class="panel-body">
        <div class="job_form">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control", placeholder: "Fill job name" %>
        </div>
        <div class="job_form">
          <%= f.label :location %>
          <%= f.text_field :location, class: "form-control", placeholder: "Fill job location" %>
        </div>
        <div class="form-group">
          <%= f.label :company_id %>
          <%= f.collection_select :company_id, @companies, :id, :name, {}, {class: "form-control"} %>
        </div>
        <div class="job_form">
          <%= f.label :category_id %>
          <%= f.collection_select :category_id, @categories, :id, :name, {}, {class: "form-control"} %>
        </div>
        <div class="job_form">
          <%= f.check_box :featured  %>
          <%= f.label :featured  %>
        </div>
        <div class="job_form">
          <%= f.label :description %>
        </div>
        <div class="job_form">
          <%= f.text_area :description, class: "form-control", rows: "5", style: "resize:none", placeholder: "Job description" %>
        </div>
        <div class="job_submit"><br>
          <%= f.submit submit_text, class: "btn btn-success btn-md" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
